<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical">
	<ListView android:id="@+id/_buffer_table" android:layout_width="fill_parent" android:layout_height="wrap_content"></ListView>
	<LinearLayout
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:orientation="horizontal">
    	<EditText android:id="@+id/_buffer_name" android:layout_width="wrap_content" android:layout_height="wrap_content"></EditText>
    	<EditText android:id="@+id/_buffer_val" android:layout_width="wrap_content" android:layout_height="wrap_content"></EditText>
    </LinearLayout>
	<LinearLayout
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:orientation="horizontal">
		<Button android:id="@+id/_buffer_set" android:text="set" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
    	<Button android:id="@+id/_buffer_append" android:text="append" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
 	   <Button android:id="@+id/_buffer_cancel" android:text="cancel" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
    </LinearLayout>
</LinearLayout>
